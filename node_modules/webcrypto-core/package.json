{
  "name": "webcrypto-core",
  "version": "1.7.1",
  "description": "Common layer to be used by crypto libraries based on WebCrypto API for input validation.",
  "main": "build/webcrypto-core.js",
  "module": "build/webcrypto-core.es.js",
  "types": "build/index.d.ts",
  "files": [
    "build",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "mocha",
    "build": "rollup -c",
    "clear": "rimraf build/*",
    "rebuild": "npm run clear && npm run build",
    "lint": "tslint -p .",
    "lint:fix": "tslint --fix -p .",
    "coverage": "nyc npm test",
    "precoveragehtml": "npm run coverage",
    "coveragehtml": "nyc report -r html",
    "predev": "if [ ! -f coverage/index.html ]; then mkdir coverage; cp .waiting.html coverage/index.html; fi",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PeculiarVentures/webcrypto-core.git"
  },
  "keywords": [
    "webcrypto",
    "crypto",
    "polyfill",
    "aes",
    "rsa",
    "sha",
    "ec",
    "shake"
  ],
  "dependencies": {
    "@peculiar/asn1-schema": "^2.0.44",
    "@peculiar/json-schema": "^1.1.12",
    "@types/web": "^0.0.55",
    "asn1js": "^2.2.0",
    "pvtsutils": "^1.2.2",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@peculiar/webcrypto": "^1.3.1",
    "@types/asn1js": "^2.0.2",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "coveralls": "^3.1.1",
    "mocha": "^9.2.1",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.69.0",
    "rollup-plugin-dts": "^4.2.0",
    "rollup-plugin-typescript2": "^0.31.2",
    "ts-node": "^10.6.0",
    "tslint": "^6.1.3",
    "typescript": "^4.6.2"
  },
  "author": "PeculiarVentures",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PeculiarVentures/webcrypto-core/issues"
  },
  "homepage": "https://github.com/PeculiarVentures/webcrypto-core#readme",
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  },
  "mocha": {
    "require": "ts-node/register",
    "extension": [
      "ts"
    ],
    "spec": [
      "test/**/*.ts"
    ]
  }
}
